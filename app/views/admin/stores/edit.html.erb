<h1>Editing store</h1>
<%= form_with url: edit_admin_store_path do |form| %>
  <% if @store.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
        <% @store.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :store_name, style: "display: block" %>
    <%= form.text_field :store_name %>
  </div>

