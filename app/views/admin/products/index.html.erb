<div class="result">
<div><h1>Products</h1></div>
<div><%= link_to "Create Products",new_admin_product_path, class:"btn btn-dark"%></div>
</div>


<table class="table">
<thead>
  <tr>
    <th>Product Code</th>              
    <th>Product</th>                      
    <th>Price </th>
    <th>Rating</th>
    <th>Discount</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
 <% @products.each do |product| %>
  <tr>
    <td><%= product.code%></td>
    <td><%= product.product_name%></td>         
    <td>Rs.<%=product.price %></td>   
    <td><span>&#11088;</span><%=product.rating %></td>      
    <td><%=product.discount %>%</td>
    <td style="display:flex; flex-direction:row;">
      <%= link_to "Show", admin_product_path(code: product.code), class: "btn btn-success" %>
      <%= link_to "Edit", edit_product_path(code: product.code), class: "btn btn-primary" %>
      <%= link_to "Delete", product_path(code: product.code), method: :delete, class:"btn btn-danger" %>
    </td>   
  </tr>
  <% end %>
  </tbody>
 </table>