<h1>Editing category</h1>
<%= form_with url: edit_admin_category_path do |form| %>
  <% if @category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :category_name, style: "display: block" %>
    <%= form.text_field :category_name, {value: @category.category_name} %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, {value: @category.description} %>
  </div>

  <div class="mt-20">
    <%= form.submit %>
  </div>
<% end %>