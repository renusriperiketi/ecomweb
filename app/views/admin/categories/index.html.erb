<h1>Categories</h1>
<table class="table">
  <thead>
    <tr>
      <th>Category name</th>
      <th>Description</th>
      <th>Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
        <td><%= category.description %></td>
        <td style="display:flex; flex-direction:row;">
          <%= link_to "Show", category, class: "btn btn-success" %>
          <%= link_to "Edit", category, class: "btn btn-primary" %>
          <%= link_to "Delete", category, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>