<div class="mybox">
      <div class="leftx">
        <% if @product.image?%>
          <%= image_tag @product.image.url, class:"product-show"%>
          <%else %>
          <%= render plain: "OK" %>
        <% end %>
      </div>

      <div class="rightx" >
        <ul>
          <strong><%= @product.product_name%></strong><br>by <strong><%= @product.store.store_name%></strong><br>
          Rs.<%= @product.price%><br>
          <%= @product.description%><br>
          <strong><%= @product.category.category_name%>'s Category</strong><br>
          <span>&#11088;</span><%= @product.rating%>
        </ul>

        <div class="btn-group mr-2" role="group" >
          <%= form_with url: carts_add_to_cart_path, method: :post do |form|%>
            <%= form.hidden_field :product_id, value: @product.id %>
            <%= button_tag "-", type: 'button', onclick: "decrement()", class: 'btn btn-default'%>
            <%= form.number_field :quantity, min: 0, max: 10, value:1 %>
            <%= button_tag "+", type: 'button', onclick: "increment()", class: 'btn btn-default'%><br>
            <%= form.submit 'Add to Cart', class: "btn btn-success" %>
          <% end %>
        </div>

        <% if current_user%>
          <% if current_user.super_admin? %>
            <%= link_to "Edit this product", edit_product_path %> |

            <% if @store %>
              <%= link_to "Back to store",  products_path%><br><br>
            <% else %>
              <%= link_to "Back to all products", all_products_path %>
            <% end %>

            <%= button_to "Destroy this product", product_path(code: @product.code), method: :delete %>
          <% end %>
        <%end%>
      </div>
</div>

<style>
  .leftx{
    position: absolute;
  }
  .rightx{
    position:absolute;
    float:right;
    margin-left: 850px;
  }
  .mybox{
    align-content: center;
    position:relative;
    top:175px;
    display:block;
    text-align: center;
  }
</style>

<script>
function increment() {
  // debugger;
  document.getElementById('quantity').stepUp();
}
function decrement() {
  document.getElementById('quantity').stepDown();
}
</script>
