<h2 class="text-center">Address</h2>

<div class="row py-2">
 <div class= "col-lg-4 mx-auto">
    <%= form_with url: user_addresses_path do |f|%>

        <%= f.label :house_or_apartment %>
        <%= f.text_field :house, class:"form-control py-2" %><br>

        <%= f.label :area %>
        <%= f.text_field :area, class:"form-control py-2" %><br>

        <%= f.label :city %>
        <%= f.text_field :city, class:"form-control py-2" %><br>

        <%= f.label :zipcode %>
        <%= f.number_field :zipcode, class:"form-control py-2" %><br>

        <%= f.label :country %>
        <%= f.text_field :country, class:"form-control py-2" %><br>

        <%= f.label :address_type %>
        <%= f.select :address_type, ["Default","Residential", "Commercial"] %><br><br>

        <%= f.submit "Save", data: {turbo:false}, class:"form-control py-2 btn btn-dark fw-bold shadow"%>
    <% end %>
 </div>
</div>

